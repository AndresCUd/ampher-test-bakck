{
    "compilerOptions": {
        "resolveJsonModule": true,
        "target": "es5",
        "module": "commonjs",
        "lib": [
            "DOM",
            "ES2016",
            "ES2019"
        ],
        "allowJs": true,
        "checkJs": true,
        "sourceMap": true,
        "outDir": "./lib",
        "removeComments": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "baseUrl": "./src"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}